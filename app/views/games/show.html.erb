<div id="game">
  <div id="board"></div>
  <div id="sideboard">
    <div id="controls">
      <div id="candidate">
        <img src="" style="visibility: hidden"/>
      </div>
      <div style="float: right">
        <input id="left" type="button" value="Left" disabled="disabled"/><br/>
        <input id="right" type="button" value="Right" disabled="disabled"/><br/>
      </div>
    </div>
    <div id="debug">
      <div id="play">
        <input id="step" type="button" value="Step"/><br/>
      </div>
      <div id="features">  
        <input id="features_all" type="button" value="Features: All"/><br/>
        <input id="features_completed" type="button" 
               value="Features: Completed"/><br/>
        <input id="features_farms" type="button" 
               value="Features: Farms"/>
      </div>
    </div>
  </div>
  <div style="display:none">
    <div id="num_tiles">72</div>
    <div id="players_turn"><%= @player.turn %></div>
    <div id="json_edges"><%= @edges.to_json %></div>
    <div id="json_tiles"><%= @tiles.to_json %></div>
    <div id="json_placed_tiles"><%= @placed.to_json %></div>
    <div id="json_roads"><%= @roads.to_json %></div>
    <div id="json_cities"><%= @cities.to_json %></div>
    <div id="json_farms"><%= @farms.to_json %></div>
    <div id="json_cloisters"><%= @cloisters.to_json %></div>
  </div>
</div>
<%= link_to 'Back', games_path %>
<%= javascript_include_tag 'cloisterspace' %>
