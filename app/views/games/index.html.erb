<% if current_user %>
  <h1>Listing games</h1>

  <table>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @games.each do |game| %>
      <tr>
        <td><%= game.id %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>

  <br />

  <%= link_to 'New Game', new_game_path %>
<% else %>
  <h1>CloisterSpace</h1>
<% end %>
