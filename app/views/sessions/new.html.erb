<h1>Log in</h1>

<ul>
<% @users.each do |user| %>
  <li><%= link_to user.email, "/sessions?email=#{user.email}", :method => :post %></li>
<% end %>
</ul>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p class="button"><%= submit_tag "Log in" %>
<% end %>
