<div id="game">

  <div id="window_main">
    <div id="board"></div>
    <div id="info">
      <div id="info_left">
        Turn, Meeples.
      </div>
      <div id="controls">
        <div id="left">
          <img src="../images/left.png"/><br/>
          ROTATE<br/>
          LEFT
        </div>
        <div id="candidate">
          <img src=""/>
        </div>
        <div id="right">
          <img src="../images/right.png"/><br/>
          ROTATE<br/>
          RIGHT      
        </div>
      </div>
      <div id="info_right">
        <input id="confirm" type="button" value="Confirm" disabled="disabled"/>
        <input id="undo" type="button" value="Undo" disabled="disabled"/><br/>
        Remaining Tiles.
      </div>
    </div>
  </div>

  <div id="sideboard">
    <div id="players">
      
      <table id="players">
        <tr>
          <th id="player_colours"></th>
          <th class="player_email">PLAYERS</th>
          <th class="player_score">SCORE</th>
        </tr>
        <% @game.players.sort_by {|p| p.turn}.each do |player| %>
          <tr id="player_<%=player.turn%>">
            <td class="player_<%= player.colour %>">&nbsp;</td>
            <td class="player_email"><%=player.user.email.upcase%></td>
            <td class="player_score"><%=player.score%></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div id="chat">Chatterbox</div>
  </div>

  <div class="invisible">
    <div id="num_tiles">72</div>
    <div id="players_turn"><%= @player.turn %></div>
    <div id="json_edges"><%= @edges.to_json %></div>
    <div id="json_tiles"><%= @tiles.to_json %></div>
    <div id="json_placed_tiles"><%= @placed.to_json %></div>
    <div id="json_roads"><%= @roads.to_json %></div>
    <div id="json_cities"><%= @cities.to_json %></div>
    <div id="json_farms"><%= @farms.to_json %></div>
    <div id="json_cloisters"><%= @cloisters.to_json %></div>
  </div>
</div>

<%= javascript_include_tag 'cloisterspace' %>
